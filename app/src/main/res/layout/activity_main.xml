<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/travel1" />

    <!-- Text: Explore -->
    <TextView
        android:id="@+id/text_explore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp" />

    <!-- Text: Travel -->
    <TextView
        android:id="@+id/text_travel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travel"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/text_explore"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp" />

    <!-- Text: Imagine -->
    <TextView
        android:id="@+id/text_imagine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imagine"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/text_travel"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp" />

    <!-- Text: Life is all about journey. Find yours. -->
    <TextView
        android:id="@+id/text_life_journey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Life is all about journey. Find yours."
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@id/text_imagine"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp" />

    <!-- Login Button -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:layout_below="@id/text_life_journey"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <!-- Create Account Button -->
    <Button
        android:id="@+id/button_createaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:layout_below="@id/loginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <!-- Continue Button -->
    <Button
        android:id="@+id/button_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:layout_below="@id/button_createaccount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
